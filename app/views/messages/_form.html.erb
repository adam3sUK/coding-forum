<div class="form-group-wrap">
  <%= form_with model: [ profile_user, profile_user.inbox.messages.build ] do |form| %>
    <div class="form-group mt-4">
      <%= form.label :title, class:"control-label"%><br>
      <%= form.text_field :title, class:"form-control" %>
      <% current_user.errors.full_messages_for(:title).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div class="form-group mt-4">
      <%= form.label :body, class:"control-label"%><br>
      <%= form.text_field :body, class:"form-control" %>
      <% current_user.errors.full_messages_for(:body).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.submit "Send", :class => "btn btn-primary mt-4" %>
    </div>
  <% end %>
</div>