<h1>Editing post</h1>

<div class="form-group-wrap">
  <%= form_with model: @post do |form| %>
    <div class="form-group mt-4">
      <%= form.rich_text_area :content, :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= form.submit "Edit", :class => "btn btn-primary mt-4" %>
    </div>
  <% end %>
</div>

<br>

<div>
  <%= link_to "Show this topic", @post.topic %> |
  <%= link_to "Back to topics", topics_path %>
</div>
