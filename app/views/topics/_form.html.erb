<%= form_with model: topic do |form| %>
  <div class="form form-horizontal">
    <div class="form-group mt-4">
      <%= form.label :title, class:"control-label"%><br>
      <%= form.text_field :title, class:"form-control" %>
      <% topic.errors.full_messages_for(:title).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div class="form-group mt-4">
      <%= form.label :content, class:"control-label" %><br>
      <%= form.rich_text_area :content, class:"form-control" %>
    </div>

    <div class="form-group">
      <%= form.submit "Create", :class => "btn btn-primary mt-4" %>
    </div>
  </div>
<% end %>
